{
  "manifest_version": 3,
  "name": "Westlaw Combined Enhancements",
  "version": "1.1",
  "description": "Enhanced Westlaw reading experience with customizable typography, layout controls, and navigation shortcuts",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "web_accessible_resources": [
    {
      "resources": ["notes-viewer.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "*://*.westlaw.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.westlaw.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Westlaw Enhancements"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 